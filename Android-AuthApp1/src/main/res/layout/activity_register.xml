<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall_auth_3"
    android:id="@+id/reg_con"
    tools:context=".Register">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:id="@+id/nest_scroll"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/doppio_one"
                android:text="Authentication App"
                android:layout_gravity="center"
                android:textColor="#156EAA"
                android:textSize="25sp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"

                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/doppio_one"
                android:text="Create New Account"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="357dp"
                android:layout_height="48dp"
                android:background="@color/black"
                android:ems="10"
                android:hint="First Name"
                android:layout_gravity="center"
                android:digits="abcdefghijklmnopqrstuvwxyz-_"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:textSize="16sp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="357dp"
                android:layout_height="48dp"
                android:background="@color/black"
                android:ems="10"
                android:hint="Last Name"
                android:layout_gravity="center"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:textSize="16sp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                />

            <EditText
                android:id="@+id/the_email"
                android:layout_width="357dp"
                android:layout_height="48dp"
                android:background="@color/black"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:textSize="16sp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="28dp"
                android:layout_gravity="center"
                android:layout_marginEnd="28dp">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/country_codex"
                    android:layout_width="150dp"
                    android:layout_height="49dp"
                    android:background="#F44336"
                    android:gravity="center_vertical"
                    app:ccp_defaultNameCode="GB" />

                <EditText
                    android:id="@+id/user_phone"
                    android:layout_width="207dp"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:ems="10"
                    android:hint="Phone Number"
                    android:inputType="numberSigned"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:errorEnabled="true" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pass_layout"
                android:layout_width="357dp"
                android:layout_height="48dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:errorEnabled="true"
                android:textColorHint="@color/white"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/white"
                app:hintEnabled="false"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/the_email"
                app:layout_constraintVertical_bias="0.195"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/the_password"
                    android:layout_width="357dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Enter Emoji Password"
                    android:textSize="16sp"
                    android:inputType="textShortMessage"
                    android:padding="10dp"
                    android:textColorHint="@color/grey"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    tools:ignore="SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pass_layout_2"
                android:layout_width="357dp"
                android:layout_height="48dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:errorEnabled="true"
                android:textColorHint="@color/white"
                app:endIconMode="password_toggle"
                android:layout_gravity="center"
                app:endIconTint="@color/white"
                app:hintEnabled="false"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pass_layout"
                app:layout_constraintVertical_bias="0.045"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/confirm_the_password"
                    android:layout_width="357dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Confirm Emoji Password"
                    android:textSize="16sp"
                    android:inputType="textShortMessage"
                    android:padding="10dp"
                    android:textColorHint="@color/grey"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/register_btn"
                android:layout_width="246dp"
                android:layout_height="48dp"
                android:backgroundTint="#F44336"
                android:layout_marginTop="5dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:text="Register"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                >
                <TextView
                    android:id="@+id/login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an Account..?"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginRight="30dp"
                    />

                <Button
                    android:id="@+id/Log_Redirect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#156EAA"
                    android:textColor="@color/white"
                    android:text="Log In"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="Please use the emoji on your keyboard"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/register_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="140dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp">


                <TextView
                    android:id="@+id/otp_auth_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/doppio_one"
                    android:text="Completing Registration...."
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <ProgressBar
                    android:id="@+id/otp_progress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>
