<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/emoji_con"
    android:background="@drawable/wall_auth_3"
    tools:context=".AuthType.EmojiAuths">

    <LinearLayout
        android:id="@+id/linearBackOtp"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:onClick="emojiPass_button_to_logInScreen"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <ImageView
            android:id="@+id/back_btn_View"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Go To OTP Request"
            android:textColor="#F44336"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/doppio_one"
        android:text="Authentication App"
        android:textColor="#156EAA"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/doppio_one"
        android:text="Insert Emoji Password Above to Complete Login"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.03" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pass_layout_3"
        android:layout_width="357dp"
        android:layout_height="48dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:errorEnabled="true"
        android:textColorHint="@color/white"
        app:endIconMode="password_toggle"
        android:layout_gravity="center"
        app:endIconTint="@color/white"
        app:hintEnabled="false"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf=" @+id/textView2"
        app:layout_constraintVertical_bias="0.045"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/emoji_password"
            android:layout_width="357dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Enter Emoji Password"
            android:textSize="16sp"
            android:inputType="textShortMessage"
            android:padding="10dp"
            android:textColorHint="@color/grey"
            android:textColor="@color/white"
            android:background="@color/black"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/emoji_btn_confirm"
        android:layout_width="247dp"
        android:layout_height="43dp"
        android:layout_margin="30dp"
        android:layout_marginBottom="144dp"
        android:backgroundTint="#156EAA"
        android:onClick="emoji_Return"
        android:text="Submit"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.192" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/doppio_one"
        android:gravity="center"
        android:text="This is your Emoji Password"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/emoji_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.827" />

    <TextView
        android:id="@+id/emoji_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:gravity="center"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />


    <LinearLayout
        android:id="@+id/emoji_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186">


        <TextView
            android:id="@+id/emj_auth_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/doppio_one"
            android:text="Requesting Password...."
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/emj_auth_progress2"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/emoji_linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625">


        <TextView
            android:id="@+id/emj_auth_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/doppio_one"
            android:text="Completing Sign In..."
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/emj_auth_progress1"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>