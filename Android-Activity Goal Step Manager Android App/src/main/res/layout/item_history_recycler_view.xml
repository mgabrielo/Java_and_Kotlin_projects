<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/rvCard"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/idLLGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Activity :"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rv_his_ActSelect"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="act"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/rv_his_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:visibility="visible"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_mode_edit_24"
                app:tint="@color/purple_700"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Target Steps :"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rv_his_StepCount"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="step"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Extra Steps :"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rv_his_ExtraCount"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="extraStep"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Date :"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rv_his_MyDate"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="date"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/rv_his_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:visibility="visible"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_delete_24"
                app:tint="@color/purple_700"/>

        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="260dp">


        <ProgressBar
            android:id="@+id/rv_his_progress_bar_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="82dp"
            android:layout_marginBottom="458dp"
            android:indeterminateOnly="false"
            android:progress="20"
            android:progressDrawable="@drawable/progress_bar2" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="280dp"
        >

        <TextView
            android:id="@+id/rv_his_progress_bar_2_text"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="166dp"
            android:layout_marginBottom="548dp"
            android:text="0%"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>