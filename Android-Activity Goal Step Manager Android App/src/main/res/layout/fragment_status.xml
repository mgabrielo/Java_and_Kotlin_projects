<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/status_fragment_container"
    tools:context=".StatusFragment">


    <TextView
        android:id="@+id/his_txt"
        android:layout_width="match_parent"
        android:textColor="@color/purple_500"
        android:textSize="18sp"
        android:text="Swipe Right for Navigation"
        android:gravity="center"
        android:layout_height="30dp"/>

    <ProgressBar
        android:id="@+id/progress_bar_2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="458dp"
        android:layout_marginTop="30dp"
        android:indeterminateOnly="false"
        android:progress="25"
        android:progressDrawable="@drawable/progress_bar2" />


    <TextView
        android:id="@+id/progress_bar_2_text"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="548dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="30sp"
        android:textStyle="bold" />



    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="380dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/purple_700">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="190dp"
                android:layout_height="44dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Activity selected :"
                />

            <EditText
                android:id="@+id/actStat"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text=""
                android:enabled="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </TableRow>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/purple_700">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="Steps selected :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/stepStat"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text=""
                android:enabled="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </TableRow>

    </androidx.cardview.widget.CardView>


    <EditText
        android:id="@+id/addStepEdtTxt"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="229dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_directions_walk_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter Extra Steps"
        android:inputType="numberSigned"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="12sp">

    </EditText>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addStepBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="228dp"
        android:background="@drawable/custom_btn2"
        android:text="add steps"
        android:textColor="@color/teal_700"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/progress_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/custom_button"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>